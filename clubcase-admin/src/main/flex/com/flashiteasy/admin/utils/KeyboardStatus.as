package com.flashiteasy.admin.utils {	import flash.display.DisplayObject;	import flash.display.Stage;	import flash.events.KeyboardEvent;	import flash.ui.Keyboard;	
	
	/**	 * @author lalex	 */	public class KeyboardStatus {				public static var stage : Stage;				public static var altDown : Boolean = false;		public static var shiftDown : Boolean = false;		public static function registerStage(clp : DisplayObject) : void {							stage = index.ADMIN_STAGE;				stage.addEventListener(KeyboardEvent.KEY_DOWN, stageKeyHandler);				stage.addEventListener(KeyboardEvent.KEY_UP, stageKeyHandler);		}		private static function stageKeyHandler(event : KeyboardEvent) : void {			switch(event.keyCode) {				case Keyboard.SHIFT:					shiftDown = event.type == KeyboardEvent.KEY_DOWN;					break;				case Keyboard.CONTROL:				case 18:					altDown = event.type == KeyboardEvent.KEY_DOWN;					break;									}		}	}}