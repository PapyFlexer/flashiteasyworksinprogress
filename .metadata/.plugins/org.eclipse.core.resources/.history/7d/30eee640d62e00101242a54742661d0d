package com.flashiteasy.api.controls.Validator
{
	/**
	 * 
	 * This validator checks if the string input by the user is a vali email address :
	 * it must contain an arobase and a point, with at least 2 letters befor the arobase,
	 * two letters between arobase and point and finally 2 letters after the point (aa@bb.cc)
	 */
	public class ValidatorTypes
	{
		/**
		 * 
		 * @default 
		 */
		public static const RESTRICT 	: String = "RestrictValidator";
		/**
		 * 
		 * @default 
		 */
		public static const IS_EMAIL 	: String = "IsEmailValidator";
		/**
		 * 
		 * @default 
		 */
		public static const IS_NULL 	: String = "IsNullValidator";
		/**
		 * 
		 * @default 
		 */
		public static const IS_EQUAL 	: String = "IsEqualValidator";
		/**
		 * 
		 * @default 
		 */
		public static const NONE 		: String = "NoValidator";
		
		
		//public static const VALIDATORS : Array = [NONE, IS_EQUAL, IS_NULL, IS_EMAIL, RESTRICT];
	}
}